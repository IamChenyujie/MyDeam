<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="#FF5001"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/xq_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="10dp"
                    android:src="@mipmap/ic_action_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="商品详情"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:paddingLeft="200dp"
                    android:src="@mipmap/ic_action_collection" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:paddingLeft="10dp"
                    android:src="@mipmap/ic_action_share" />
            </LinearLayout>

            <ImageView
                android:id="@+id/xq_iamge"
                android:layout_width="match_parent"
                android:layout_height="300dip" />

            <TextView
                android:id="@+id/xq_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xq_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="00000"
                    android:textColor="#ff00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="240dp"
                    android:text="销量:"
                    android:textColor="#DEDEDE" />

                <TextView
                    android:id="@+id/xq_mai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="件"
                    android:textColor="#DEDEDE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="送至"
                    android:textColor="#DEDEDE"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff00"
                    android:padding="8dp"
                    android:text="全国"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="有运货"
                    android:textColor="#DEDEDE"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="免费运"
                    android:textColor="#DEDEDE"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FAFAFA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="评价"
                    android:textColor="#DEDEDE"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff00"
                    android:padding="8dp"
                    android:text="好评率:100%"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ff00"
                    android:padding="8dp"
                    android:text="0人评价"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FAFAFA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="商品介绍"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#FAFAFA" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="#ffffff"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:src="@mipmap/ic_goods_store" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="好商城V5"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="描述: 5.0分" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dip"
                    android:layout_gravity="center"
                    android:background="#ff00" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="服务: 5.0分" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dip"
                    android:layout_gravity="center"
                    android:background="#ff00" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="物流: 5.0分" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="8dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="20dip"
                    android:layout_gravity="center"
                    android:background="#ff00" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="店铺推选"
                android:textSize="16sp" />

            <com.example.chen.dean1.view.ViewList
                android:id="@+id/xq_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.example.chen.dean1.view.ViewList>i

        </LinearLayout>
    </ScrollView>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_goods_kefu"
            android:gravity="center"
            android:text="客服" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/ic_goods_cart"
            android:gravity="center"
            android:text="购物车" />
        <RadioButton
            android:id="@+id/xq_ra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:drawableTop="@drawable/ic_action_collection"
            android:gravity="center"
            android:background="#FF5001"
            android:text="加入购物车"
            android:textColor="#ffffff"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:drawableTop="@drawable/ic_collection_store"
            android:gravity="center"
            android:background="#FF0000"
            android:text="立刻购买"
            android:textColor="#ffffff"/>
    </RadioGroup>
</RelativeLayout>