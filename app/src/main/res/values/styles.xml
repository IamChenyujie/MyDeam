<resources>

    <style name="Control" />
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextView.UserOrder" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:layout_height">56dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">#666666</item>
        <item name="android:background">#ffff</item>
    </style>
    <style name="TextView.UserTitle" parent="Control">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:drawablePadding">8dip</item>
        <item name="android:layout_marginTop">16dip</item>
        <item name="android:layout_marginBottom">1px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textColor">#666666</item>
        <item name="android:drawableRight">@mipmap/ic_normal_dot_left</item>
        <item name="android:background">#ffff</item>
    </style>
    <style name="Layout.LinearHor" parent="Control">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
